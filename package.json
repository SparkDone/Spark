{
  "name": "AstroCms",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "check": "astro check",
    "download-images": "node scripts/download-strapi-images.js",
    "optimize-images": "node scripts/optimize-images.js",
    "build": "node scripts/download-strapi-images.js && astro build && pagefind --site dist/client && node scripts/post-build.js && node scripts/optimize-html.js",
    "build:local": "dotenv -e .env.local -- node scripts/download-strapi-images.js && astro build && pagefind --site dist/client && node scripts/post-build.js && node scripts/optimize-html.js",
    "build:fast": "astro build && pagefind --site dist/client && node scripts/post-build.js && node scripts/optimize-html.js",
    "build:optimized": "node scripts/download-strapi-images.js && node scripts/optimize-images.js && astro build && pagefind --site dist/client && node scripts/post-build.js && node scripts/optimize-html.js",

    "deploy:cf": "wrangler pages deploy dist/client --project-name=AstroCms",
    "preview": "astro preview",
    "security-check": "node scripts/security-check.js",
    "pre-deploy": "pnpm security-check && pnpm build",
    "astro": "astro",
    "type-check": "tsc --noEmit --isolatedDeclarations",
    "format": "biome format --write ./src",
    "lint": "biome check --write ./src",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^12.6.0",
    "@astrojs/node": "^9.3.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "@astrojs/svelte": "7.1.0",
    "@astrojs/tailwind": "^6.0.2",
    "@expressive-code/core": "^0.41.2",
    "@expressive-code/plugin-collapsible-sections": "^0.41.2",
    "@expressive-code/plugin-line-numbers": "^0.41.2",
    "@fontsource-variable/jetbrains-mono": "^5.2.6",
    "@fontsource/roboto": "^5.2.6",
    "@iconify-json/fa6-brands": "^1.2.5",
    "@iconify-json/fa6-regular": "^1.2.3",
    "@iconify-json/fa6-solid": "^1.2.3",
    "@iconify-json/heroicons": "^1.2.2",
    "@iconify-json/icon-park-outline": "^1.2.2",
    "@iconify-json/lucide": "^1.2.57",
    "@iconify-json/material-symbols": "^1.2.28",
    "@iconify-json/tabler": "^1.2.19",
    "@iconify/svelte": "^4.2.0",
    "@swup/astro": "^1.6.0",
    "@tailwindcss/typography": "^0.5.16",
    "astro": "5.11.0",
    "astro-expressive-code": "^0.41.2",
    "astro-icon": "^1.1.5",
    "hastscript": "^9.0.1",
    "katex": "^0.16.22",
    "markdown-it": "^14.1.0",
    "mdast-util-to-string": "^4.0.0",
    "overlayscrollbars": "^2.11.4",
    "pagefind": "^1.3.0",
    "photoswipe": "^5.4.4",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-components": "^0.3.0",
    "rehype-katex": "^7.0.1",
    "rehype-slug": "^6.0.0",
    "remark-directive": "^3.0.1",
    "remark-directive-rehype": "^0.4.2",
    "remark-github-admonitions-to-directives": "^1.0.5",
    "remark-math": "^6.0.0",
    "remark-sectionize": "^2.1.0",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.2",
    "svelte": "^5.34.8",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "unist-util-visit": "^5.0.0",
    "dotenv-cli": "^10.0.0"
  },
  "devDependencies": {
    "@astrojs/ts-plugin": "^1.10.4",
    "@biomejs/biome": "2.0.6",
    "@rollup/plugin-yaml": "^4.1.2",
    "@types/hast": "^3.0.4",
    "@types/markdown-it": "^14.1.2",
    "@types/mdast": "^4.0.4",
    "@types/sanitize-html": "^2.16.0",
    "dotenv": "^17.2.1",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "stylus": "^0.64.0",
    "wrangler": "^4.26.0"
  },
  "packageManager": "pnpm@9.14.4"
}
