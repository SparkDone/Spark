---

import { profileConfig } from "../config";
import { url } from "../utils/url-utils";
import { getIndexSettings } from "../lib/strapi";

const currentYear = new Date().getFullYear();

// 获取首页设置
const indexSettings = await getIndexSettings();
const siteTitle = indexSettings?.data?.site_title || profileConfig.name;
console.log('🏷️ Index Settings:', indexSettings);
console.log('🏷️ Site Title:', siteTitle);
---

<!-- 简洁的Footer区域 -->
<div class="w-full py-8">
    <div class="max-w-[var(--page-width)] mx-auto px-6">
        <!-- 单行Footer内容 -->
        <div class="flex flex-wrap items-center justify-center gap-x-4 gap-y-2 text-sm text-gray-600 dark:text-gray-400">
            <!-- 版权信息 -->
            <div>
                &copy; <span id="copyright-year">{currentYear}</span> {siteTitle}. All Rights Reserved.
            </div>

            <!-- 分隔点 -->
            <span class="text-gray-300 dark:text-gray-600">•</span>

            <!-- 链接 -->
            <a class="text-[var(--primary)] hover:text-[var(--primary)]/80 transition-colors"
               target="_blank" href={url('rss.xml')}>RSS</a>

            <span class="text-gray-300 dark:text-gray-600">•</span>

            <a class="text-[var(--primary)] hover:text-[var(--primary)]/80 transition-colors"
               target="_blank" href={url('sitemap-index.xml')}>Sitemap</a>


        </div>
    </div>
</div>