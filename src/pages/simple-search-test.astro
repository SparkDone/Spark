---
/**
 * 简化搜索测试页面
 */
---

<html>
<head>
    <meta charset="UTF-8">
    <title>简化搜索测试</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        .search-box { margin: 20px 0; }
        .search-box input { padding: 10px; width: 300px; font-size: 16px; }
        .search-box button { padding: 10px 20px; font-size: 16px; }
        .results { margin: 20px 0; }
        .result-item { border: 1px solid #ddd; margin: 10px 0; padding: 15px; }
        .loading { color: #666; }
        .error { color: red; }
        .success { color: green; }
    </style>
</head>
<body>
    <h1>🔍 简化搜索测试</h1>
    
    <div class="search-box">
        <input type="text" id="searchInput" placeholder="输入搜索关键词..." value="11">
        <button onclick="performSearch()">搜索</button>
    </div>
    
    <div id="status" class="loading">准备就绪</div>
    <div id="results" class="results"></div>

    <script>
        async function performSearch() {
            const input = document.getElementById('searchInput');
            const status = document.getElementById('status');
            const results = document.getElementById('results');
            
            const query = input.value.trim();
            if (!query) {
                status.textContent = '请输入搜索关键词';
                status.className = 'error';
                return;
            }
            
            status.textContent = '搜索中...';
            status.className = 'loading';
            results.innerHTML = '';
            
            try {
                const response = await fetch(`/api/search/?q=${encodeURIComponent(query)}`);
                console.log('搜索API响应:', response);
                
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }
                
                const data = await response.json();
                console.log('搜索数据:', data);
                
                if (data.success && data.data) {
                    status.textContent = `✅ 找到 ${data.data.length} 个结果`;
                    status.className = 'success';
                    
                    if (data.data.length > 0) {
                        results.innerHTML = data.data.map((item, index) => `
                            <div class="result-item">
                                <h3>${index + 1}. ${item.title}</h3>
                                <p><strong>URL:</strong> <a href="${item.url}" target="_blank">${item.url}</a></p>
                                <p><strong>描述:</strong> ${item.description || '无描述'}</p>
                                <div><strong>摘要:</strong> ${item.excerpt || '无摘要'}</div>
                            </div>
                        `).join('');
                    } else {
                        results.innerHTML = '<p>没有找到匹配的结果</p>';
                    }
                } else {
                    status.textContent = `❌ 搜索失败: ${data.message || '未知错误'}`;
                    status.className = 'error';
                }
            } catch (error) {
                console.error('搜索错误:', error);
                status.textContent = `❌ 搜索错误: ${error.message}`;
                status.className = 'error';
            }
        }
        
        // 页面加载后自动搜索"11"
        window.addEventListener('load', () => {
            setTimeout(performSearch, 500);
        });
        
        // 回车键搜索
        document.getElementById('searchInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                performSearch();
            }
        });
    </script>
</body>
</html>
